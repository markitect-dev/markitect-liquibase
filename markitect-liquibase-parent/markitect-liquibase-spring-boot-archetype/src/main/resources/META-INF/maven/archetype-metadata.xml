<?xml version="1.0" encoding="UTF-8"?>
<archetype-descriptor xmlns="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="https://maven.apache.org/plugins/maven-archetype-plugin/archetype-descriptor/1.1.0
        https://maven.apache.org/xsd/archetype-descriptor-1.1.0.xsd"
    name="${artifactId}">
  <requiredProperties>
    <requiredProperty key="springBootVersion">
      <defaultValue>3.1.0</defaultValue>
      <validationRegex>2.7.12|3.0.7|3.1.0|.+</validationRegex>
    </requiredProperty>
    <requiredProperty key="javaVersion">
      <defaultValue>17</defaultValue>
      <validationRegex>8|11|17|20</validationRegex>
    </requiredProperty>
    <requiredProperty key="liquibaseVersion">
      <defaultValue>4.22.0</defaultValue>
      <validationRegex>inherit|4.22.0|.+</validationRegex>
    </requiredProperty>
    <requiredProperty key="snakeyamlVersion">
      <defaultValue>2.0</defaultValue>
      <validationRegex>inherit|1.33|2.0|.+</validationRegex>
    </requiredProperty>
    <requiredProperty key="h2Version">
      <defaultValue>2.1.214</defaultValue>
      <validationRegex>inherit|1.4.200|2.1.214|.+</validationRegex>
    </requiredProperty>
    <requiredProperty key="jooqVersion">
      <defaultValue>3.18.4</defaultValue>
      <validationRegex>inherit|3.14.16|3.15.12|3.16.19|3.17.13|3.18.4|.+</validationRegex>
    </requiredProperty>
  </requiredProperties>
  <fileSets>
    <fileSet filtered="true" packaged="true">
      <directory>src/main/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory>src/main/resources</directory>
      <includes>
        <include>**/*</include>
      </includes>
    </fileSet>
    <fileSet filtered="true" packaged="true">
      <directory>src/test/java</directory>
      <includes>
        <include>**/*.java</include>
      </includes>
    </fileSet>
    <fileSet filtered="true">
      <directory/>
      <includes>
        <include>.java-version</include>
        <include>.sdkmanrc</include>
      </includes>
    </fileSet>
  </fileSets>
</archetype-descriptor>

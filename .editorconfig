root = true

[*]
charset = utf-8
end_of_line = lf
indent_size = 2
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
ij_continuation_indent_size = 4

[{*.bat,*.cmd,*.ps1}]
end_of_line = crlf

[*.java]
max_line_length = 100
ij_java_binary_operation_sign_on_next_line = true
ij_java_block_comment_at_first_column = false
ij_java_class_count_to_use_import_on_demand = 999
ij_java_imports_layout = $*, |, *
ij_java_line_comment_at_first_column = false
ij_java_names_count_to_use_import_on_demand = 999
ij_java_packages_to_use_import_on_demand = unset
ij_java_ternary_operation_signs_on_next_line = true

[{*.kt,*.kts}]
indent_size = 4
max_line_length = 120
ij_kotlin_block_comment_add_space = true
ij_kotlin_block_comment_at_first_column = false
ij_kotlin_imports_layout = *
ij_kotlin_line_comment_add_space = true
ij_kotlin_line_comment_add_space_on_reformat = true
ij_kotlin_line_comment_at_first_column = false
ij_kotlin_name_count_to_use_star_import = 999
ij_kotlin_name_count_to_use_star_import_for_members = 999
ij_kotlin_packages_to_use_import_on_demand = unset
ij_visual_guides = 100, 120
ktlint_code_style = ktlint_official
ktlint_standard_chain-method-continuation = disabled

[*.xml]
ij_xml_align_attributes = false
ij_xml_attribute_wrap = off
ij_xml_block_comment_at_first_column = false
ij_xml_keep_blank_lines = 1
ij_xml_line_comment_at_first_column = false
ij_xml_text_wrap = off
